# AristAI Environment Configuration
# Copy to .env and fill in values. DO NOT commit .env (it's gitignored).

# === For Docker Compose (default, no changes needed) ===
# DATABASE_URL=postgresql+psycopg2://aristai:aristai_dev@db:5432/aristai
# REDIS_URL=redis://redis:6379/0
# API_URL=http://api:8000

# === For Local Dev (outside Docker) ===
# DATABASE_URL=postgresql+psycopg2://aristai:aristai_dev@localhost:5433/aristai
# REDIS_URL=redis://localhost:6379/0
# API_URL=http://localhost:8000

# LLM API Keys (at least one required for workflows)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# App settings (DEBUG=true enables /api/debug endpoints)
DEBUG=true

# Voice Assistant - Production ElevenLabs Agents Configuration
# Note: Legacy TTS providers (elevenlabs, elevenlabs_realtime) are DEPRECATED for production
# Use ONLY signed URL flow with official ElevenLabs Agents SDK

# ElevenLabs Agents - REQUIRED for production
ELEVENLABS_API_KEY=              # Required: API key from ElevenLabs console
ELEVENLABS_AGENT_ID=             # Required: Agent ID from ElevenLabs console

# Legacy settings (DEPRECATED - DO NOT USE IN PRODUCTION)
# VOICE_ASR_PROVIDER=stub          # Legacy: "stub" | "whisper"  
# VOICE_TTS_PROVIDER=stub          # Legacy: "stub" | "elevenlabs" | "elevenlabs_realtime" | "elevenlabs_agent"
# ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Legacy: default voice ID
# ELEVENLABS_MODEL_ID=eleven_turbo_v2     # Legacy: default model ID

# Voice Configuration
VOICE_MAX_SECONDS=30
VOICE_MAX_MB=5
VOICE_RATE_LIMIT_PER_MIN=10
