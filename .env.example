# AristAI Environment Configuration
# Copy to .env and fill in values. DO NOT commit .env (it's gitignored).

# === For Docker Compose (default, no changes needed) ===
# DATABASE_URL=postgresql+psycopg2://aristai:aristai_dev@db:5432/aristai
# REDIS_URL=redis://redis:6379/0
# API_URL=http://api:8000

# === For Local Dev (outside Docker) ===
# DATABASE_URL=postgresql+psycopg2://aristai:aristai_dev@localhost:5433/aristai
# REDIS_URL=redis://localhost:6379/0
# API_URL=http://localhost:8000

# LLM API Keys (at least one required for workflows)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# App settings (DEBUG=true enables /api/debug endpoints)
DEBUG=true

# Voice Assistant - Production ElevenLabs Agents Configuration
# Note: Legacy TTS providers (elevenlabs, elevenlabs_realtime) are DEPRECATED for production
# Use ONLY signed URL flow with official ElevenLabs Agents SDK

# ElevenLabs Agents - REQUIRED for production
ELEVENLABS_API_KEY=              # Required: API key from ElevenLabs console
ELEVENLABS_AGENT_ID=             # Required: Agent ID from ElevenLabs console

# Legacy settings (DEPRECATED - DO NOT USE IN PRODUCTION)
# VOICE_ASR_PROVIDER=stub          # Legacy: "stub" | "whisper"  
# VOICE_TTS_PROVIDER=stub          # Legacy: "stub" | "elevenlabs" | "elevenlabs_realtime" | "elevenlabs_agent"
# ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Legacy: default voice ID
# ELEVENLABS_MODEL_ID=eleven_turbo_v2     # Legacy: default model ID

# Voice Configuration
VOICE_MAX_SECONDS=30
VOICE_MAX_MB=5
VOICE_RATE_LIMIT_PER_MIN=10

# Canvas LMS integration (for /api/integrations/canvas/*)
# Use your Canvas domain with /api/v1 suffix
# Example: https://your-school.instructure.com/api/v1
CANVAS_API_URL=
CANVAS_API_TOKEN=
CANVAS_API_TIMEOUT=30
CANVAS_OAUTH_CLIENT_ID=
CANVAS_OAUTH_CLIENT_SECRET=

# Blackboard LMS integration (optional)
BLACKBOARD_API_URL=
BLACKBOARD_API_TOKEN=

# UPP class-system integration (optional)
UPP_API_URL=
UPP_API_TOKEN=

# UPP Browser Automation (Playwright) - for JavaScript-rendered content and video extraction
# Set to "false" to disable browser fallback and use only static scraping
UPP_USE_BROWSER_FALLBACK=true
# Timeout in seconds for browser page loads
UPP_BROWSER_TIMEOUT=30
# Enable video stream extraction (HLS/DASH) from video pages
UPP_EXTRACT_VIDEOS=true

# Chrome MCP: Universal LLM-driven extraction (RECOMMENDED)
# Uses LLM to analyze page structure instead of regex patterns
# Works universally for any website without site-specific rules
# Requires OPENAI_API_KEY to be set
UPP_USE_CHROME_MCP=true

# Optional key used to encrypt stored LMS connection tokens at rest.
# Set a strong random value in production.
INTEGRATIONS_SECRET_KEY=
