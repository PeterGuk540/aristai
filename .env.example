# AristAI Environment Configuration
# Copy to .env and fill in values. DO NOT commit .env (it's gitignored).

# === For Docker Compose (default, no changes needed) ===
# DATABASE_URL=postgresql+psycopg2://aristai:aristai_dev@db:5432/aristai
# REDIS_URL=redis://redis:6379/0
# API_URL=http://api:8000

# === For Local Dev (outside Docker) ===
# DATABASE_URL=postgresql+psycopg2://aristai:aristai_dev@localhost:5433/aristai
# REDIS_URL=redis://localhost:6379/0
# API_URL=http://localhost:8000

# LLM API Keys (at least one required for workflows)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# App settings (DEBUG=true enables /api/debug endpoints)
DEBUG=true

# Voice Assistant
VOICE_ASR_PROVIDER=stub          # "stub" | "whisper"
VOICE_TTS_PROVIDER=stub          # "stub" | "elevenlabs" | "elevenlabs_realtime" | "elevenlabs_agent"
ELEVENLABS_API_KEY=              # Only needed if VOICE_TTS_PROVIDER=elevenlabs*
ELEVENLABS_AGENT_ID=             # Only needed if VOICE_TTS_PROVIDER=elevenlabs_agent
VOICE_MAX_SECONDS=30
VOICE_MAX_MB=5
VOICE_RATE_LIMIT_PER_MIN=10
