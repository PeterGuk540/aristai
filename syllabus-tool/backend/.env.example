# Environment (development | production)
ENVIRONMENT=production
LOG_LEVEL=INFO

# Database (PostgreSQL)
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=syllabus_tool
POSTGRES_USER=syllabus_tool
POSTGRES_PASSWORD=your_secure_password_here

# Storage (MinIO - Optional, defaults to local 'uploads/' if empty)
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET_NAME=syllabus-files
# MINIO_SECURE=False

# LLM Provider (DeepSeek / OpenAI Compatible)
DEEPSEEK_API_KEY=sk-your-deepseek-key
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# LLM Provider (Anthropic - Optional)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# LLM Tuning
LLM_TEMPERATURE=0.1
LLM_TIMEOUT_SECONDS=60
LLM_MAX_RETRIES=2

# Security
CORS_ORIGINS=http://localhost:5173,https://your-domain.com
CORS_ALLOW_CREDENTIALS=True
